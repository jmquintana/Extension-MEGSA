{
    "manifest_version":2,
    "name": "Subasta MEGSA pro",
    "description": "Resalta los cambios en las ofertas de las subastas de MEGSA.",
    "version": "2.0.0",
    "icons": {
        "64": "64.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "check.png"
    },
    "content_scripts": [
        {
            "css": ["styles.css"],
            "js": ["content.js", "jquery.min.js","numeral.min.js"],
            "matches": ["https://negociacion.megsa.ar/Usuario/CAMMESA/GlobalVentaCAMMESA.aspx?ronda*",
                        "https://negociacion.megsa.ar/Usuario/CAMMESA/GlobalVentaCAMMESA*"]
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "downloads"
    ]
}